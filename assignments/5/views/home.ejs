<%- include('./partials/header') %>


<main>
  <div class="container home-container">

    <!-- Featured Movie -->
    <section class="movie-section">
      <h1 class="search-bar">Search For Your Favorite Movies</h1>
      <form action="/search" method="GET">
              <input
                type="text"
                name="q"
                placeholder="Search for a movie..."
                aria-label="Search for a movie"
                required>
            </form>
      </section>

    <!-- Trending -->
    <section class="movie-section">
      <h2>Trending Now</h2>
      <p">Based on reviews from the last 7 days</p>

      <div class="movie-section">
        <% if (trendingMovies && trendingMovies.length) { %>
          <% trendingMovies.forEach(movie => { %>
            <article id="movie-card">
              <a href="/movies/<%= movie.id %>">
                <% if (movie.image) { %>
                  <img src="<%= movie.image %>" alt="<%= movie.title %> poster" id="movie-poster">
                <% } else { %>
                  <p>No Poster Found</p>
                <% } %>
              </a>

              <div class="movie-meta">
                <h3>
                  <a id ="movieTitle" href="/movies/<%= movie.id %>"><%= movie.title %></a>
                </h3>
                <p>
                  <span><%= movie.year || 'N/A' %></span>
                  <span>‚Ä¢</span>
                  <span><%= movie.rating || 'NR' %></span>
                </p>
                <p>
                  üî• <%= movie.review_count_week %> reviews this week
                </p>
                <span>Movie</span>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <p>No trending movies in the last week.</p>
        <% } %>
      </div>
    </section>

    <!-- Popular -->
    <section class="movie-section">
      <h2 class="section-title">Popular Movies</h2>
      <p class="section-subtitle">Most reviewed movies of all time</p>

      <div class="movie-grid">
        <% if (popularMovies && popularMovies.length) { %>
          <% popularMovies.forEach(movie => { %>
            <article id="movie-card">
              <a href="/movies/<%= movie.id %>">

                <% if (movie.image) { %>
                  <img src="<%= movie.image %>" alt="<%= movie.title %> poster" id="movie-poster">
                <% } else { %>
                  <p>No Image</p>
                <% } %>
              </a>

              <div class="movie-meta">
                <h3>
                  <a href="/movies/<%= movie.id %>"><%= movie.title %></a>
                </h3>
                <p class="movie-sub">
                  <span><%= movie.year || 'N/A' %></span>
                  <span>‚Ä¢</span>
                  <span><%= movie.rating || 'NR' %></span>
                </p>
                <p>‚≠ê <%= movie.review_count_all || 0 %> total reviews</p>
                <span>Movie</span>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <p>No popular movies yet.</p>
        <% } %>
      </div>
    </section>

  </div>
</main>

<%- include('./partials/footer') %>
