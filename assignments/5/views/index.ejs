<%- include('./partials/header') %>

<div class="container">
  <div class="welcome-section">
    <h1><%= message %></h1>
    <p>A Simple Movie Review Site</p>
    
    <% if (isAuthenticated) { %>
      <div class="action-buttons">
        <a href="/home" class="btn primary-btn">Home</a>
        <a href="/user/profile" class="btn primary-btn">View Profile</a>
      </div>
    <% } else { %>
      <div class="action-buttons">
        <a href="/" class="btn primary-btn">Home</a>
        <a href="/auth/login" class="btn primary-btn">Login</a>
        <a href="/auth/register" class="btn secondary-btn">Register</a>
      </div>
    <% } %>
  </div>
  
  <div class="features-section">
    <h2>Features</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <h3>User Authentication</h3>
        <p>Secure login and registration with password hashing</p>
      </div>
      <div class="feature-card">
        <h3>Session Management</h3>
        <p>Persistent sessions with secure cookies</p>
      </div>
      <div class="feature-card">
        <h3>Protected Routes</h3>
        <p>Restrict access to authenticated users only</p>
      </div>

      <div class="feature-card">
        <h3>Search For Movies</h3>
        <p>Using our Database of Movies you can review any Movie</p>
      </div>

      <div class="feature-card">
        <h3>Rating System</h3>
        <p>Leave a quick Review on any Movie your enjoy or dislike </p>
      </div>

      <div class="feature-card">
        <h3>Store Reviews</h3>
        <p>Look at all the Reviews you have previously made in the Past</p>
      </div>

    </div>
  </div>
</div>

<%- include('./partials/footer') %>
